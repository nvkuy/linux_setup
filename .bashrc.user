# For competitive programming

CP_DIR_PATH="$HOME/CompetitiveProgramming/"
CP_TEMPLATE_FILE_PATH="$CP_DIR_PATH/CP/basic_temp.cpp"
CP_MAKE_FILE_PATH="$CP_DIR_PATH/CP/Makefile"
CP_DEBUG_FILE_PATH="$CP_DIR_PATH/CP/.vscode/"
CP_SOLVE_FILE='solve.cpp'

go_prob() {
    prob_name=$(echo "$1" | xargs)
    if [[ -d "$prob_name" ]]; then
        cd $prob_name
        code . --reuse-window --goto $CP_SOLVE_FILE
    elif [[ -d "../$prob_name" ]]; then
        cd ../$prob_name
        code . --reuse-window --goto $CP_SOLVE_FILE
    else
        echo "Can't find problem $prob_name."
    fi
}

new_prob() {
    prob_name=$(echo "$1" | xargs)
    [[ -f "$CP_SOLVE_FILE" ]] && cd ..
    if [[ -d "$prob_name" ]]; then
        echo "Problem $prob_name already exists."
        return
    fi
    mkdir $prob_name
    cd $prob_name
    cat $CP_TEMPLATE_FILE_PATH > $CP_SOLVE_FILE
    cp -r $CP_DEBUG_FILE_PATH $(pwd)
    cp $CP_MAKE_FILE_PATH $(pwd)
    mkdir build
    printf '.vscode/\nMakefile\nbuild/\n' > .gitignore
    code . --reuse-window --goto $CP_SOLVE_FILE
}

